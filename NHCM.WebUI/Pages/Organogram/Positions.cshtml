@page "{handler?}/{id?}"
@model NHCM.WebUI.Pages.Organogram.PositionsModel

@{
    Layout = null;
}



<div class="panel panel-flat" style="direction: rtl;">
    <div class="panel-heading">
        <h1 class="panel-title">ثبت بست</h1>
    </div>

    <div class="panel-body" style="padding-bottom:5px;"> 
        <form id="dv_Organogram_Positions" class="form sub-form page-component" type="form" prefix="po" parent="dv_Organogram_Plan" parentcol="OrganoGramId">
            <fieldset class="content-group">
                <legend class="text-bold">برای درج بست لطفاً از فورم ذیل استفاده نمائید</legend>
                <div class="row">
                    <div class="col-md-5 col-sm-12 col-xs-12 pull-right">
                        <div class="form-group has-feedback has-feedback-left">
                            <label class="text-bold">
                                عنوان وظیفه
                                <span class="text-danger">&nbsp;*</span>
                            </label>
                            <input id="poname" name="poname" type="text" class="form-control" required />
                        </div>
                    </div>
                    <div class="col-md-3 col-sm-12 col-xs-12 pull-right">
                        <div class="form-group has-feedback has-feedback-left">
                            <label class="text-bold">
                                نوع وظیفه
                                <span class="text-danger">&nbsp;*</span>
                            </label>
                            <select id="popositiontypeid" name="poPositionTypeId" asp-items="@Model.ListOfPositionType" type="text" class="select search" required>
                                <option value="">&nbsp;&nbsp;---</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-3 col-sm-12 col-xs-12 pull-right">
                        <div class="form-group">
                            <label class="text-bold">
                                بست
                                <span class="text-danger">&nbsp;*</span>
                            </label>
                            <select id="porankid" name="poRankId" asp-items="@Model.ListOfRanks" class="select search" required>
                                <option value="">&nbsp;&nbsp;---</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class=" row">
                    <div class="col-md-5 col-sm-12 col-xs-12 pull-right">
                        <div class="form-group has-feedback has-feedback-left">
                            <label class="text-bold">
                                راپور ده
                                <span class="text-danger">&nbsp;*</span>
                            </label>
                            <select id="poparentid" name="poParentId" asp-items="@Model.ListOfReportTo" class="select">
                                <option value="">&nbsp;&nbsp;---</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-3 col-sm-12 col-xs-12 pull-right">
                        <div class="form-group has-feedback has-feedback-left">
                            <label class="text-bold">
                                حالت
                                <span class="text-danger">&nbsp;*</span>
                            </label>
                            <select id="postatusid" name="poStatusId"  class="select " asp-items="@Model.ListOfStatus" required>
                                <option value="">&nbsp;&nbsp;---</option> 
                            </select>
                        </div>
                    </div>
                </div>
                <hr />

                <div class="row">
                    <div class="col-md-3 col-sm-12 col-xs-12 pull-right">
                        <div class="form-group">
                            <label class="text-bold">
                                نوع تغیر
                                <span class="text-danger">&nbsp;*</span>
                            </label>
                            <select id="poplantypeid" name="poPlanTypeId" asp-items="@Model.ListOfPlanType" class="select">
                                <option value="">&nbsp;&nbsp;---</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-3 col-sm-12 col-xs-12 pull-right">
                        <div class="form-group">
                            <label class="text-bold">
                                کود بست
                                <span class="text-danger">&nbsp;*</span>
                            </label>
                            <input id="pocode" name="poCode" type="text" class="form-control " required />
                        </div>
                    </div>

                    <div class="col-md-3 col-sm-12 col-xs-12 pull-right">
                        <div class="form-group">
                            <label class="text-bold">
                                رتب معاش
                                <span class="text-danger">&nbsp;*</span>
                            </label>
                            <select id="posalarytypeid" name="poSalaryTypeId" asp-items="@Model.ListOfSalaryType" class="select ">
                                <option value="">&nbsp;&nbsp;---</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-3 col-sm-12 col-xs-12 pull-right">
                        <div class="form-group">
                            <label class="text-bold">
                                محل
                                <span class="text-danger">&nbsp;*</span>
                            </label>
                            <select id="polocationid" name="poLocationId" asp-items="@Model.ListOfLocations" class="select " required>
                                <option value="">&nbsp;&nbsp;---</option>
                            </select>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-3 col-sm-12 col-xs-12 pull-right">
                        <div class="form-group">
                            <label class="text-bold">
                                درجه تحصیل
                                <span class="text-danger">&nbsp;*</span>
                            </label>
                            <select id="poeducationlevelid" name="poEducationLevelId" asp-items="@Model.ListOfEducationLevels" class="select ">
                                <option value="">&nbsp;&nbsp;---</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-3 col-sm-12 col-xs-12 pull-right">
                        <div class="form-group">
                            <label class="text-bold">
                                تجربه کاری
                                <span class="text-danger">&nbsp;*</span>
                            </label>
                            <input id="poexperiencenoofyear" name="poExperienceNoOfYear" type="text" class="form-control " required />
                        </div>
                    </div>
                    <div class="col-md-3 col-sm-12 col-xs-12 pull-right">
                        <div class="form-group">
                            <label class="text-bold">
                                تخصص
                                <span class="text-danger">&nbsp;*</span>
                            </label>
                            <input id="poprofession" name="poProfession" type="text" class="form-control" required />
                        </div>
                    </div>
                    <div class="col-md-3 col-sm-12 col-xs-12 pull-right">
                        <div class="form-group">
                            <label class="text-bold">
                                کادر
                                <span class="text-danger">&nbsp;*</span>
                            </label>
                            <input id="pokadr" name="poKadr" type="text" class="form-control" required />
                        </div>
                    </div>

                </div>


                @* <div class="row">
           <div class="col-md-10 col-sm-12 col-xs-12 pull-right">
                <div class="form-group has-feedback has-feedback-left">
                    <label class="text-bold">لایحه وظایف </label>
                    <input id="popositionresponsibilityandpurpose" name="poPositionResponsibilityAndPurpose" rows="5" cols="5" class="form-control" />
                </div>
            </div>
        </div>*@
                <hr />
            </fieldset>
            <div class="row div-form-control">
                <div class="col-md-12">
                    <div class="form-group">
                        <button type="button" class="btn btn-primary" action="save"><i class="icon-floppy-disk position-right"></i>ثبت معلومات</button>
                        <button type="button" class="btn btn-primary" action="search"><i class="icon-search4 position-right"></i>جستجو </button>
                        <button type="button" class="btn btn-primary" action="new"><i class="icon-new-tab position-right"></i>صفحه جدید </button>
                    </div>
                </div>
            </div>
            <div class="form-grid">
                <table style="direction: rtl;" bindonclick="true">
                    <thead>
                        <tr>
                            <th colname="Name">اسم</th>
                            <th colname="ParentText">راپور ده</th>
                            <th colname="PositionTypeText">نوع وظیفه</th>
                            <th colname="PlanTypeText">نوع تغیر</th>
                            <th colname="RankText">قدم/رتبه</th>
                            <th colname="StatusText">حالت</th>
                            <th colname="Code">کود بست</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </form>
    </div>
</div>

