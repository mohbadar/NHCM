@page "{handler?}/{id?}"
@model NHCM.WebUI.Pages.Lookups.OrganizationModel
@{
    ViewData["Title"] = "Organization";
    Layout = "~/Pages/Shared/_CustomLayout.cshtml";
}
@Html.AntiForgeryToken()
<div class="panel-heading">
    <h1 class="panel-title">ثبت و راجستر ارگان</h1>
</div>
<div class="panel-body" style="padding-bottom:5px;">
    <form id="dv_Lookups_Organization" class="form main-form page-component" type="form" prefix="org">
        <fieldset class="content-group">
            <legend class="text-bold">برای ثبت  ارگان لطفاً از فورم ذیل استفاده نمائید</legend>
            <div class="row">
                <div class="col-md-4 col-sm-12 col-xs-12 pull-right">
                    <div class="form-group has-feedback has-feedback-left">
                        <label class="text-bold">
                              نام   
                            <span class="text-danger">&nbsp;*</span>
                        </label>
                        <input id="orgdari" name="orgDari" type="text" class="form-control search" required />
                        <div class="form-control-feedback">
                            <i class="icon-search4 text-size-base"></i>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 col-sm-12 col-xs-12 pull-right">
                    <div class="form-group has-feedback has-feedback-left">
                        <label class="text-bold">
                           نام پشتو  
                            <span class="text-danger">&nbsp;*</span>
                        </label>
                        <input id="orgpashto" name="orgPashto" type="text" class="form-control search" required />
                    </div>
                </div>
                 <div class="col-md-4 col-sm-12 col-xs-12 pull-right">
                    <div class="form-group has-feedback has-feedback-left">
                        <label class="text-bold">
                            نام انگلیسی
                            <span class="text-danger">&nbsp;*</span>
                        </label>
                        <input id="orgname" name="orgName" type="text" class="form-control search" required />
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-4 col-sm-12 col-xs-12 pull-right">
                    <div class="form-group has-feedback has-feedback-left">
                        <label class="text-bold">
                            نوع ارگان
                            <span class="text-danger">&nbsp;*</span>
                        </label>
                        <select id="orgorgunittypeid" name="orgorgunittypeid" asp-items="@Model.ListOfOrganizationType" class="select search" required>
                            <option></option>
                        </select>
                    </div>
                </div>
                <div class="col-md-3 col-sm-12 col-xs-12 pull-right">
                    <div class="form-group has-feedback has-feedback-left">
                        <label class="text-bold">
                            کود
                            <span class="text-danger">&nbsp;*</span>
                        </label>
                        <input id="orgcode" name="orgCode" type="text" class="form-control search" required />
                    </div>
                </div>
                <div class="col-md-3 col-sm-12 col-xs-12 pull-right">
                    <div class="form-group has-feedback has-feedback-left">
                        <label class="text-bold">
                            حالت
                            <span class="text-danger">&nbsp;*</span>
                        </label>
                        <select id="orgstatusid" name="orgStatusId" class="select search" required>
                            <option></option>
                            <option value="1">فعال</option>
                            <option value="0">غیر فعال</option>
                        </select>
                    </div>
                </div>
            </div>
 
            <hr />
            <div class="row div-form-control">
                <div class="col-md-12">
                    <div class="form-group">
                        <button type="button" class="btn btn-primary" action="save"><i class="icon-floppy-disk position-right"></i>ثبت معلومات</button>
                        <button type="button" class="btn btn-primary" action="search"><i class="icon-search4 position-right"></i>جستجو </button>
                        <button type="button" class="btn btn-primary" action="new"><i class="icon-new-tab position-right"></i>صفحه جدید</button>
                    </div>
                </div>
            </div>
            <div class="form-grid">
                <table style="direction: rtl;" bindonclick="true">
                    <thead>
                        <tr>
                            <th colname="Dari">نام</th>
                            <th colname="Name">نام انگلیسی</th>
                            <th colname="OrgUnitTypeText">نوع ارگان</th>
                            <th colname="Code">کود</th> 
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </fieldset>
    </form>
</div>

