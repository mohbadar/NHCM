@page "{handler?}/{id?}"
@model NHCM.WebUI.Pages.Employment.SelectionModel
@{
    ViewData["Title"] = "Selection";
    Layout = "~/Pages/Shared/_CustomLayout.cshtml";
}

@Html.AntiForgeryToken()
<div class="panel-heading">
    <h1 class="panel-title">پیشنهاد تعیینات</h1>
</div>
<div class="panel-body" style="padding-bottom:5px;">
    <legend class="text-bold">برای ثبت و تغیر پیشنهادات تعیینات از فورم ذیل استفاده نمائید</legend>
    <form id="dv_Employment_Selection" class="form main-form page-component" type="form" attachment="true" prefix="ux">
        <fieldset class="content-group">
            <div class="row">

                <div class="col-md-4 col-sm-12 col-xs-12 pull-right">
                    <div class="form-group">
                        <label class="text-bold">
                            کارمند
                            <span class="text-danger">&nbsp;*</span>
                        </label>
                        <select id="uxpersonid" name="uxpersonid" class="select" asp-items="@Model.ListOfPerson" required>
                            <option></option>
                        </select>
                    </div>
                </div>
                <div class="col-md-5 col-sm-12 col-xs-12 pull-right">
                    <div class="form-group">
                        <label class="text-bold">
                            عنوان وظیفه
                            <span class="text-danger">&nbsp;*</span>
                        </label>
                        <select id="uxpositionid" name="uxpositionid" asp-items="@Model.ListOfPosition" class="select" required>
                            <option></option>
                        </select>
                    </div>
                </div>

                <div class="col-md-3 col-sm-12 col-xs-12 pull-right">
                    <div class="form-group">
                        <label class="text-bold">
                            نوع تعیینات
                            <span class="text-danger">&nbsp;*</span>
                        </label>
                        <select id="uxeventtypeid" name="uxeventtypeid" asp-items="@Model.ListOfEventType" class="select" required>
                            <option></option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-2 col-sm-12 col-xs-12 pull-right">
                    <div class="form-group has-feedback has-feedback-left">
                        <label class="text-bold">
                            نمبر حکم
                            <span class="text-danger">&nbsp;*</span>
                        </label>
                        <input id="uxverdictregno" name="uxverdictregno" type="text" class="form-control search" required />
                        <div class="form-control-feedback">
                            <i class="icon-search4 text-size-base"></i>
                        </div>
                    </div>
                </div>

                <div class="col-md-3 col-sm-12 col-xs-12 pull-right">
                    <div class="form-group">
                        <label class="text-bold">
                            تاریخ حکم (هجری شمسی)
                            <span class="text-danger">&nbsp;*</span>
                        </label>
                        <div class="input-group">
                            <span class="input-group-addon"><i class="icon-calendar3"></i></span>
                            <input type="text" id="uxverdictdatepersian" name="uxverdictdatepersian" class="form-control Shamsi" sibling="uxverdictdate" placeholder="تاریخ حکم" required />
                        </div>
                    </div>
                </div>

                <div class="col-md-3 col-sm-12 col-xs-12 pull-right">
                    <div class="form-group">
                        <label class="text-bold">
                            تاریخ حکم (میلادی)
                            <span class="text-danger">&nbsp;*</span>
                        </label>
                        <div class="input-group">
                            <span class="input-group-addon"><i class="icon-calendar3"></i></span>
                            <input type="text" id="uxverdictdate" name="uxverdictdate" class="form-control Miladi" sibling="uxverdictdatepersian" placeholder="تاریخ حکم" required />
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-2 col-sm-12 col-xs-12 pull-right">
                    <div class="form-group has-feedback has-feedback-left">
                        <label class="text-bold">
                            نتیجه امتحان
                            <span class="text-danger">&nbsp;*</span>
                        </label>
                        <input id="uxfinalno" name="uxfinalno" type="text" class="form-control search" required />
                        <div class="form-control-feedback">
                            <i class="icon-search4 text-size-base"></i>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 col-sm-12 col-xs-12 pull-right">
                    <div class="form-group">
                        <label class="text-bold">
                            تاریخ منظوری (هجری شمسی)
                            <span class="text-danger">&nbsp;*</span>
                        </label>
                        <div class="input-group">
                            <span class="input-group-addon"><i class="icon-calendar3"></i></span>
                            <input type="text" id="uxeffectivedatepersian" name="uxeffectivedatepersian" class="form-control Shamsi" sibling="uxeffectivedate" placeholder="تاریخ منظوری" required />
                        </div>
                    </div>
                </div>

                <div class="col-md-3 col-sm-12 col-xs-12 pull-right">
                    <div class="form-group">
                        <label class="text-bold">
                            تاریخ منظوری (میلادی)
                            <span class="text-danger">&nbsp;*</span>
                        </label>
                        <div class="input-group">
                            <span class="input-group-addon"><i class="icon-calendar3"></i></span>
                            <input type="text" id="uxeffectivedate" name="uxeffectivedate"  class="form-control Miladi" sibling="uxeffectivedatepersian" placeholder="تاریخ منظوری" required />
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-10 col-sm-12 col-xs-12 pull-right">
                    <div class="form-group">
                        <label class="text-bold">
                            ملاحظات
                            <span class="text-danger">&nbsp;*</span>
                        </label>
                        <textarea id="uxpremarks" name="uxpddescription" rows="2" cols="2" class="form-control remarks" required></textarea>
                    </div>
                </div>
            </div>
        </fieldset>
        <hr />
        <div class="row div-form-control main-form-details">
            <div class="col-md-12">
                <div class="form-group actions">
                    <button type="button" class="btn btn-primary" action="save"><i class="icon-floppy-disk position-right"></i>ثبت معلومات</button>
                    <button type="button" class="btn btn-primary" action="search"><i class="icon-search4 position-right"></i>جستجو </button>
                    <button type="button" class="btn btn-primary" action="new"><i class="icon-new-tab position-right"></i>صفحه جدید </button>
                </div>
            </div>
        </div>
        <div class="form-grid main-form-details">
            <table style="direction: rtl;" bindonclick="true">
                <thead>
                    <tr>
                        <th colname="PositionId">بست</th>


                        


                        <th colname="DateText">تاریخ</th>
                        <th colname="EventTypeId">نوع </th>
                        <th colname="Remarks"> ملاحضات</th>
                      
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>

        <div class="page-sidebar" type="subscreen" display="false">
            <ul class="navigation navigation-alt navigation-accordion"></ul>
        </div>
    </form>
</div>


