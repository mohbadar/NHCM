@page "{handler?}/{id?}"
@model NHCM.WebUI.Pages.Recruitment.DocumentModel
@{
    Layout = null;
}

<div class="panel panel-flat" style="direction: rtl;">
    <div class="panel-heading">
        <h1 class="panel-title">اسناد و ضمایم</h1>
    </div>
    <div class="panel-body" style="padding-bottom:5px;">
        <legend class="text-bold">اسناد و ضمایم کارمند را ثبت، تغیر و حذف نمائید</legend>
        <form id="dv_Recruitment_Document" class="form sub-form page-component" type="form" prefix="uxpd" parent="dv_Recruitment_Person" parentcol="PersonID">
            <fieldset class="content-group">
                <div class="row">
                    <div class="col-md-2 col-sm-12 col-xs-12 pull-right">
                        <div class="form-group">
                            <label class="text-bold">
                                نوع سند/ضمیمه
                                <span class="text-danger">&nbsp;*</span>
                            </label>
                            <select id="uxpddocumenttypeid" name="uxpddocumenttypeid" asp-items="@Model.ListOfDocumentTypesD" class="select" required>
                                <option></option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-6 col-sm-12 col-xs-12 pull-right">
                        <label class="text-bold">
                            سند/ضمیمه را انتخاب نمائید
                            <span class="text-danger">&nbsp;*</span>
                        </label>
                        <div class="form-group">
                            <input type="file" id="uxattachement" name="attachement" class="file-attachment" data-show-upload="false" data-show-preview="false" />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-8 col-sm-12 col-xs-12 pull-right">
                        <div class="form-group has-feedback has-feedback-left">
                            <label class="text-bold">ملاحضات </label>
                            <textarea id="uxpdremarks" name="uxpdRemarks" rows="2" cols="2" class="form-control remarks"></textarea>
                        </div>
                    </div>
                </div>
            </fieldset>
            <hr />
            <div class="row div-form-control">
                <div class="col-md-12">
                    <div class="form-group">
                        <button type="button" class="btn btn-primary" action="save"><i class="icon-floppy-disk position-right"></i>ثبت معلومات</button>
                        <button type="button" class="btn btn-primary" action="new"><i class="icon-new-tab position-right"></i>صفحه جدید </button>
                    </div>
                </div>
            </div>
            <div class="form-grid">
                <table style="direction: rtl;" bindonclick="true">
                    <thead>
                        <tr>
                            <th colname="countrytext">کشور</th>
                            <th colname="place">محل</th>
                            <th colname="traveldate">تاریخ سفر</th>
                            <th colname="returndate">تاریخ برگشت</th>
                        </tr>
                    </thead>

                    <tbody></tbody>
                </table>
            </div>
        </form>
    </div>
</div>

