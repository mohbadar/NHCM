@page "{handler?}/{id?}"
@model NHCM.WebUI.Pages.Recruitment.HealthModel


@{
    Layout = null;
}

<div class="panel panel-flat" style="direction: rtl;">
    <div class="panel-heading">
        <h1 class="panel-title">گذارش و معاینات صحی</h1>
    </div>
    <div class="panel-body" style="padding-bottom:5px;">
        <legend class="text-bold">ثبت گذارش صحی کارمند</legend>
        <form id="dv_Recruitment_Health" class="form sub-form page-component" type="form" prefix="uxph" parent="dv_Recruitment_Person" parentcol="PersonID">
            <fieldset class="content-group">
                <div class="row">
                    <div class="col-md-3 col-sm-12 col-xs-12 pull-right">
                        <div class="form-group">
                            <label class="text-bold">
                                تاریخ راپور
                            </label>
                            <div class="input-group">
                                <span class="input-group-addon"><i class="icon-calendar3"></i></span>
                                <input type="text" id="ReportDateShamsi" name="ReportDateShamsi" sibling="uxphreportdate" class="form-control Shamsi" aria-label="date1" aria-describedby="date1" required />
                            </div>
                        </div>
                    </div>

                    <div class="col-md-3 col-sm-12 col-xs-12 pull-right">
                        <div class="form-group">
                            <label class="text-bold">
                                معادل
                            </label>
                            <div class="input-group">
                                <span class="input-group-addon"><i class="icon-calendar3"></i></span>
                                <input type="text" id="uxphreportdate" name="uxphReportDate" sibling="ReportDateShamsi" class="form-control Miladi" aria-label="date1" aria-describedby="date1" required />
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3 col-sm-12 col-xs-12 pull-right">
                        <div class="form-group has-feedback has-feedback-left">
                            <label class="text-bold">
                                حالت
                                <span class="text-danger">&nbsp;*</span>
                            </label>

                            <select id="uxphstatusid" name="uxphStatusID" asp-items="@Model.ListOfStatus" class="select" required>
                                <option></option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-3 col-sm-12 col-xs-12 pull-right" style="margin-top:30px">
                        <div class="has-feedback has-feedback-left">
                            <label class="text-bold">تایید است</label>
                            @*<input id="uxphapproved" name="uxphApproved" type="checkbox" class="control-primary">*@
                        </div>
                    </div>

                </div>
                <div class="row">
                    <div class="col-md-10 col-sm-12 col-xs-12 pull-right">
                        <div class="form-group has-feedback has-feedback-left">
                            <label class="text-bold">ملاحضات </label>
                            <textarea id="uxphremarks" name="uxphRemarks" rows="3" cols="5" class="form-control remarks"></textarea>
                        </div>
                    </div>
                </div>
            </fieldset>
            <hr />
            <div class="row div-form-control">
                <div class="col-md-12">
                    <div class="form-group">
                        <button type="button" class="btn btn-primary" action="save"><i class="icon-floppy-disk position-right"></i>ثبت معلومات</button>
                        <button type="button" class="btn btn-primary" action="new"><i class="icon-new-tab position-right"></i>صفحه جدید </button>
                    </div>
                </div>
            </div>
            <div class="form-grid">
                <table style="direction: rtl;" bindonclick="true">
                    <thead>
                        <tr>
                            <th colname="reportdate">تاریخ راپور</th>
                            <th colname="remarks">ملاحضات</th>
                            <th colname="approved">تایید است</th>
                            <th colname="statustext">حالت</th>
                        </tr>
                    </thead>

                    <tbody></tbody>
                </table>
            </div>
        </form>

    </div>
</div>
