@page "{handler?}/{id?}"
@model NHCM.WebUI.Pages.Recruitment.AssetModel

@{
    Layout = null;
}

<div class="panel panel-flat" style="direction: rtl;">
    <div class="panel-heading">
        <h1 class="panel-title"></h1>
    </div>
    <div class="panel-body" style="padding-bottom:5px;">
        <form id="dv_Recruitment_Asset" class="form sub-form page-component" attachment="true" type="form" prefix="uxas" parent="dv_Recruitment_Person" parentcol="PersonID">
            <fieldset class="content-group">
                <legend class="text-bold">دارایی های کارمند</legend>
                <div class="row">
                    <div class="col-md-2 col-sm-12 col-xs-12 pull-right">
                        <div class="form-group">
                            <label class="text-bold">
                                نوع دارایی
                                <span class="text-danger">&nbsp;*</span>
                            </label>
                            <select id="uxasassettypeid" name="uxasAssetTypeID" asp-items="@Model.ListOfAssetType" class="select" required>
                                <option></option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-3 col-sm-12 col-xs-12 pull-right">
                        <div class="form-group has-feedback has-feedback-left">
                            <label class="text-bold">
                                ارزش
                                <span class="text-danger">&nbsp;*</span>
                            </label>
                            <input id="uxasvalue" name="uxasValue" type="text" class="form-control" required />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-10 col-sm-12 col-xs-12 pull-right">
                        <div class="form-group has-feedback has-feedback-left">
                            <label class="text-bold">
                                تفصیل
                                <span class="text-danger">&nbsp;*</span>
                            </label>
                            <textarea id="uxasdescription" name="uxasdescription" rows="3" cols="5" class="form-control remarks"></textarea>
                        </div>
                    </div>
                </div>
            </fieldset>
            <hr />
            <div class="row div-form-control">
                <div class="col-md-12">
                    <div class="form-group actions">
                        <button type="button" class="btn btn-primary" action="save"><i class="icon-floppy-disk position-right"></i>ثبت معلومات</button>
                        <button type="button" class="btn btn-primary" action="search"><i class="icon-search4 position-right"></i>جستجو </button>
                        <button type="button" class="btn btn-primary" action="new"><i class="icon-new-tab position-right"></i>صفحه جدید</button>
                    </div>
                </div>
            </div>
            <div class="form-grid">
                <table style="direction: rtl;" bindonclick="true">
                    <thead>
                        <tr>
                            <th colname="assettypetext">نوع دارایی</th>
                            <th colname="value">ارزش</th>
                            <th colname="description">تفصیل</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </form>


    </div>
</div>