@page "{handler?}/{id?}"
@model NHCM.WebUI.Pages.Recruitment.TravelModel

@{
    Layout = null;
}



<div class="panel panel-flat" style="direction: rtl;">
    <div class="panel-heading">
        <h1 class="panel-title">بخش سفرها</h1>
    </div>
    <div class="panel-body" style="padding-bottom:5px;">
        <legend class="text-bold">ثبت سفر های کارمند</legend>
        <form id="dv_Recruitment_Travel" class="form sub-form page-component" type="form" prefix="uxpt" parent="dv_Recruitment_Person" parentcol="PersonID">
            <fieldset class="content-group">
                <div class="row">
                    <div class="col-md-3 col-sm-12 col-xs-12 pull-right">
                        <div class="form-group">
                            <label class="text-bold">
                                کشور
                                <span class="text-danger">&nbsp;*</span>
                            </label>
                            <select id="uxptcountryid" name="uxptCountryID" asp-items="@Model.ListOfLocations" class="select" required>
                                @*<option ext-value="افغانستان" value="1">افغانستان</option>
                                <option ext-value="ایران" value="464">ایران</option>
                                <option ext-value="پاکستان" value="465">پاکستان</option>
                                <option ext-value="ازبکستان" value="466">ازبکستان</option>
                                <option ext-value="روسیه" value="467">روسیه</option>
                                <option ext-value="هندوستان" value="468">هندوستان</option>
                                <option ext-value="ارمنستان" value="470">ارمنستان</option>
                                <option ext-value="آسترالیا" value="471">آسترالیا</option>
                                <option ext-value="اتریش" value="472">اتریش</option>
                                <option ext-value="بوتان" value="473">بوتان</option>
                                <option ext-value="جمهوری چک" value="477">جمهوری چک</option>*@
                            </select>
                        </div>
                    </div>
                    <div class="col-md-3 col-sm-12 col-xs-12 pull-right">
                        <div class="form-group has-feedback has-feedback-left">
                            <label class="text-bold">
                                محل
                                <span class="text-danger">&nbsp;*</span>
                            </label>
                            <input id="uxptplace" name="uxptPlace" type="text" class="form-control" required />
                        </div>
                    </div>

                    <div class="col-md-3 col-sm-12 col-xs-12 pull-right">
                        <div class="form-group">
                            <label class="text-bold">
                                تاریخ سفر
                            </label>
                            <div class="input-group">
                                <span class="input-group-addon"><i class="icon-calendar3"></i></span>
                                <input type="text" id="TravelDateShamsi" name="TravelDateShamsi" sibling="uxpttraveldate" class="form-control Shamsi" aria-label="date1" aria-describedby="date1" required />
                            </div>
                        </div>
                    </div>

                    <div class="col-md-3 col-sm-12 col-xs-12 pull-right">
                        <div class="form-group">
                            <label class="text-bold">
                                معادل
                            </label>
                            <div class="input-group">
                                <span class="input-group-addon"><i class="icon-calendar3"></i></span>
                                <input type="text" id="uxpttraveldate" name="uxptTravelDate" sibling="TravelDateShamsi" class="form-control Miladi" aria-label="date1" aria-describedby="date1" required />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-3 col-sm-12 col-xs-12 pull-right">
                        <div class="form-group">
                            <label class="text-bold">
                                تاریخ برگشت
                            </label>
                            <div class="input-group">
                                <span class="input-group-addon"><i class="icon-calendar3"></i></span>
                                <input type="text" id="ReturnDateShamsi" name="ReturnDateShamsi" sibling="uxptreturndate" class="form-control Shamsi" aria-label="date1" aria-describedby="date1" required />
                            </div>
                        </div>
                    </div>

                    <div class="col-md-3 col-sm-12 col-xs-12 pull-right">
                        <div class="form-group">
                            <label class="text-bold">
                                معادل
                            </label>
                            <div class="input-group">
                                <span class="input-group-addon"><i class="icon-calendar3"></i></span>
                                <input type="text" id="uxptreturndate" name="uxptReturnDate" sibling="ReturnDateShamsi" class="form-control Miladi" aria-label="date1" aria-describedby="date1" required />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-10 col-sm-12 col-xs-12 pull-right">
                        <div class="form-group has-feedback has-feedback-left">
                            <label class="text-bold">ملاحضات </label>
                            <textarea id="uxptremarks" name="uxptRemarks" rows="3" cols="5" class="form-control remarks"></textarea>
                        </div>
                    </div>
                </div>
            </fieldset>
            <hr />
            <div class="row div-form-control">
                <div class="col-md-12">
                    <div class="form-group">
                        <button type="button" class="btn btn-primary" action="save"><i class="icon-floppy-disk position-right"></i>ثبت معلومات</button>
                        <button type="button" class="btn btn-primary" action="new"><i class="icon-new-tab position-right"></i>صفحه جدید </button>
                    </div>
                </div>
            </div>
            <div class="form-grid">
                <table style="direction: rtl;" bindonclick="true">
                    <thead>
                        <tr>
                            <th colname="countrytext">کشور</th>
                            <th colname="place">محل</th>
                            <th colname="traveldate">تاریخ سفر</th>
                            <th colname="returndate">تاریخ برگشت</th>
                        </tr>
                    </thead>

                    <tbody></tbody>
                </table>
            </div>
        </form>
    </div>
</div>

