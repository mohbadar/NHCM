@page
@model NHCM.WebUI.Areas.Security.Pages.RegisterModel

@{ 
    Layout = "Security/Shared/_SecuritySharedLayout";
}




<div class="row">
    <div class="col-md-4">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4>ایجاد نام کاربری</h4>
            <hr />
            @*<div asp-validation-summary="All" class="text-danger"></div>*@
            <div class="form-group">
                <label asp-for="@Model.UserName"></label>
                <input asp-for="@Model.UserName" class="form-control" />
                <span asp-validation-for="@Model.UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Password"></label>
                <input asp-for="@Model.Password" class="form-control" />
                <span asp-validation-for="@Model.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.ConfirmPassword"></label>
                <input asp-for="@Model.ConfirmPassword" class="form-control" />
                <span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>
            </div>

            <div>
                @if(ModelState.ErrorCount > 0 )
                {
                    <label>@Model.ErrorMessage</label>
            
                }
            </div>
            <button type="submit" class="btn btn-primary">Register</button>
        </form>
    </div>
</div>



@section Scripts{ 

    <partial name="Security/Shared/_ValidationScriptsPartial" />
}